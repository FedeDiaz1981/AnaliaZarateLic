---
const rightImgUrl = "/01.jpeg";

const email = "licmilagrospereira@gmail.com";

// Color intermedio entre #EF7C8E (rosa) y #0B0B7F (azul)
const heroBg = "#7D4487";
---

<section class="w-full" style={`background:${heroBg};`}>
  <div class="mx-auto max-w-6xl px-6 py-14 sm:py-16 md:py-24">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <!-- Texto -->
      <div class="max-w-xl">
        <h1
          class="text-white font-semibold tracking-tight
                 text-3xl leading-tight
                 sm:text-4xl sm:leading-tight
                 md:text-[49px] md:leading-[1.15]"
        >
          Tu salud mental es igual de importante que la física, no la dejes para después
        </h1>

        <p
          class="mt-6 text-white/95
                 text-xl leading-snug
                 sm:text-2xl
                 md:text-[36px] md:leading-snug"
        >
          Psicología para el bienestar personal
        </p>

        <a
          href={`mailto:${email}`}
          aria-label="Agenda tu sesión"
          class="mt-10 inline-flex items-center gap-3 rounded-full
                 bg-white/90 px-6 py-3 text-sm font-semibold text-slate-900
                 hover:bg-white"
        >
          Agenda tu sesión
          <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-black/5">
            <svg viewBox="0 0 24 24" class="h-4 w-4" aria-hidden="true">
              <path
                fill="currentColor"
                d="M12 2a10 10 0 1 0 10 10A10.01 10.01 0 0 0 12 2Zm0 18a8 8 0 1 1 8-8a8.01 8.01 0 0 1-8 8Zm3.5-9H12V7.5a1 1 0 0 0-2 0V12a1 1 0 0 0 1 1h4.5a1 1 0 0 0 0-2Z"
              />
            </svg>
          </span>
        </a>
      </div>

      <!-- Imagen derecha -->
      <div class="order-first flex justify-center md:order-none md:justify-end">
        <img
          src={rightImgUrl}
          alt="Imagen principal"
          class="h-auto w-[260px] sm:w-[320px] md:w-[481px] object-cover drop-shadow"
          fetchpriority="high"
        />
      </div>
    </div>
  </div>
</section>
